<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.basebackend.user.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.basebackend.user.entity.SysUser">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="INTEGER"/>
        <result column="birthday" property="birthday" jdbcType="DATE"/>
        <result column="dept_id" property="deptId" jdbcType="BIGINT"/>
        <result column="user_type" property="userType" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="login_ip" property="loginIp" jdbcType="VARCHAR"/>
        <result column="login_time" property="loginTime" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="update_by" property="updateBy" jdbcType="VARCHAR"/>
        <result column="is_deleted" property="isDeleted" jdbcType="INTEGER"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 通用字段 -->
    <sql id="Base_Column_List">
        id, username, password, nickname, email, phone, avatar, gender, birthday, dept_id, user_type,
        status, login_ip, login_time, create_time, update_time, create_by, update_by, is_deleted, remark
    </sql>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE username = #{username} AND is_deleted = 0
    </select>

    <!-- 根据手机号查询用户 -->
    <select id="selectByPhone" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE phone = #{phone} AND is_deleted = 0
    </select>

    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE email = #{email} AND is_deleted = 0
    </select>

    <!-- 批量查询用户 -->
    <select id="selectBatchByIds" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND is_deleted = 0
    </select>

    <!-- 更新用户登录信息 -->
    <update id="updateLoginInfo">
        UPDATE sys_user
        SET login_ip = #{loginIp}, login_time = #{loginTime}, update_by = #{updateBy}
        WHERE id = #{userId} AND is_deleted = 0
    </update>

    <!-- 修改密码 -->
    <update id="updatePassword">
        UPDATE sys_user
        SET password = #{password}, update_by = #{updateBy}
        WHERE id = #{userId} AND is_deleted = 0
    </update>

    <!-- 检查用户名是否唯一 -->
    <select id="checkUsernameUnique" resultType="java.lang.Boolean">
        SELECT CASE WHEN COUNT(*) = 0 THEN TRUE ELSE FALSE END
        FROM sys_user
        WHERE username = #{username}
        AND is_deleted = 0
        <if test="userId != null">
            AND id != #{userId}
        </if>
    </select>

    <!-- 检查邮箱是否唯一 -->
    <select id="checkEmailUnique" resultType="java.lang.Boolean">
        SELECT CASE WHEN COUNT(*) = 0 THEN TRUE ELSE FALSE END
        FROM sys_user
        WHERE email = #{email}
        AND is_deleted = 0
        <if test="userId != null">
            AND id != #{userId}
        </if>
    </select>

    <!-- 检查手机号是否唯一 -->
    <select id="checkPhoneUnique" resultType="java.lang.Boolean">
        SELECT CASE WHEN COUNT(*) = 0 THEN TRUE ELSE FALSE END
        FROM sys_user
        WHERE phone = #{phone}
        AND is_deleted = 0
        <if test="userId != null">
            AND id != #{userId}
        </if>
    </select>
</mapper>
