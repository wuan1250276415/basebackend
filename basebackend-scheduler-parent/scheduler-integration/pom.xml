    <parent>
        <groupId>com.basebackend</groupId>
        <artifactId>basebackend-scheduler-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>scheduler-integration</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Scheduler Integration</name>
    <description>集成模块 - 提供Camunda BPMN、Form引擎等集成功能</description>

    <dependencies>
