apiVersion: v1
kind: Secret
metadata:
  name: admin-api-secrets
  labels:
    app: basebackend-admin-api
    component: database
type: Opaque
stringData:
  # 数据库连接配置（需根据实际环境修改）
  database.url: "jdbc:mysql://mysql-service:3306/basebackend_admin?useUnicode=true&characterEncoding=utf8&zeroDateTimeBehavior=convertToNull&useSSL=false&serverTimezone=Asia/Shanghai"
  database.username: "admin"
  database.password: "CHANGE_ME_IN_PRODUCTION"

  # Redis配置
  redis.host: "redis-service"
  redis.port: "6379"
  redis.password: "CHANGE_ME_IN_PRODUCTION"

  # JWT密钥
  jwt.secret: "CHANGE_ME_IN_PRODUCTION_MUST_BE_BASE64_ENCODED"

  # Nacos认证
  nacos.username: "nacos"
  nacos.password: "nacos"
