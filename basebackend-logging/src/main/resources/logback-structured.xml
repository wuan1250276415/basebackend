<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 引入 Spring Boot 默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 应用名称 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="basebackend"/>
    <springProperty scope="context" name="ENVIRONMENT" source="spring.profiles.active" defaultValue="dev"/>
    <springProperty scope="context" name="LOKI_URL" source="logging.structured.loki-url" defaultValue="http://localhost:3100/loki/api/v1/push"/>
    <springProperty scope="context" name="LOKI_ENABLED" source="logging.structured.loki-enabled" defaultValue="false"/>

    <!-- 日志文件路径 -->
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}}/spring.log}"/>
    <property name="LOG_PATH" value="${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}}"/>

    <!-- 控制台输出（彩色） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- 基础字段 -->
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <includeStructuredArguments>true</includeStructuredArguments>
            <includeTags>true</includeTags>
            <includeCallerData>false</includeCallerData>

            <!-- 自定义字段 -->
            <customFields>{"application":"${APP_NAME}","environment":"${ENVIRONMENT}"}</customFields>

            <!-- 时间戳格式 -->
            <timeZone>Asia/Shanghai</timeZone>
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSS</timestampPattern>

            <!-- 字段命名 -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <stackTrace>stackTrace</stackTrace>
            </fieldNames>
        </encoder>
    </appender>

    <!-- 文件输出（JSON格式） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <includeStructuredArguments>true</includeStructuredArguments>
            <includeTags>true</includeTags>
            <includeCallerData>false</includeCallerData>
            <customFields>{"application":"${APP_NAME}","environment":"${ENVIRONMENT}"}</customFields>
            <timeZone>Asia/Shanghai</timeZone>
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSS</timestampPattern>
        </encoder>

        <!-- 滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件名称格式 -->
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- 每个文件最大大小 -->
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- 保留天数 -->
            <maxHistory>7</maxHistory>
            <!-- 总大小限制 -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Loki Appender（可选） -->
    <if condition='property("LOKI_ENABLED").equals("true")'>
        <then>
            <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
                <http>
                    <url>${LOKI_URL}</url>
                </http>
                <format>
                    <label>
                        <pattern>application=${APP_NAME},environment=${ENVIRONMENT},level=%level</pattern>
                    </label>
                    <message class="com.github.loki4j.logback.JsonLayout">
                        <includeContext>true</includeContext>
                        <includeMdc>true</includeMdc>
                        <includeStructuredArguments>true</includeStructuredArguments>
                        <includeTags>true</includeTags>
                    </message>
                    <sortByTime>true</sortByTime>
                </format>
                <!-- 批量发送配置 -->
                <batchSize>100</batchSize>
                <batchTimeoutMs>10000</batchTimeoutMs>
            </appender>
        </then>
    </if>

    <!-- 异步输出（提高性能） -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE"/>
    </appender>

    <if condition='property("LOKI_ENABLED").equals("true")'>
        <then>
            <appender name="ASYNC_LOKI" class="ch.qos.logback.classic.AsyncAppender">
                <queueSize>512</queueSize>
                <discardingThreshold>0</discardingThreshold>
                <appender-ref ref="LOKI"/>
            </appender>
        </then>
    </if>

    <!-- 日志级别配置 -->
    <logger name="com.basebackend" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.mybatis" level="INFO"/>
    <logger name="com.alibaba" level="INFO"/>

    <!-- SQL 日志（可选开启） -->
    <logger name="com.basebackend.admin.mapper" level="DEBUG"/>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <if condition='property("LOKI_ENABLED").equals("true")'>
            <then>
                <appender-ref ref="ASYNC_LOKI"/>
            </then>
        </if>
    </root>
</configuration>
